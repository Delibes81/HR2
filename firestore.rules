rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite lectura pública para colecciones de contenido
    // Colecciones públicas de contenido
    match /products/{productId} { allow read: if true; allow write: if request.auth != null; }
    match /categories/{categoryId} { allow read: if true; allow write: if request.auth != null; }
    match /blogPosts/{postId} { allow read: if true; allow write: if request.auth != null; }
    match /testimonials/{id} { allow read: if true; allow write: if request.auth != null; }
    match /teamMembers/{id} { allow read: if true; allow write: if request.auth != null; }
    match /metrics/{id} { allow read: if true; allow write: if request.auth != null; }
    match /faqs/{id} { allow read: if true; allow write: if request.auth != null; }
    match /siteConfig/{configId} { allow read: if true; allow write: if request.auth != null; }

    // Clientes y Checkout
    match /customers/{userId}/checkout_sessions/{sessionId} {
      allow read, write: if true; // Simplificado para desarrollo, idealmente: request.auth != null
    }
    match /customers/{userId} {
       allow read, write: if true;
    }

    // Regla por defecto para desarrollo (permite leer/escribir todo si estás autenticado, o ajústalo según necesites)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
